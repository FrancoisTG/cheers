<div class="text-center padded">

<h2>Cheers!</h2>

<%= image_tag @hangout.user.facebook_picture_url%>
  <p> <%= t('.message', host_name: @hangout.user.first_name ) %></p>
<h2><%= @hangout.title%></h2>

  <p><i class="fa fa-calendar" aria-hidden="true"></i>
<%= t('.day', day: @hangout.date.strftime('%d %b, %Y') ) %></p>
  <p><i class="fa fa-clock-o" aria-hidden="true"></i>
<%= t('.hour', hour: @hangout.date.strftime('%I:%M%P') ) %></p>
<h3><%= t('.where') %></h3>
<p><%= t('.concept_explanation_html', link: link_to( t('.explanation_link_html'), root_path)) %></p>

<h3><%= t('.question') %></h3>
<div class="btn-card-position"><%= link_to t('.yes_btn'), new_hangout_confirmation_path(@hangout), class: 'btn btn-success' %></div>
<br>

<div class="btn-card-position"><%= link_to t('.no_btn'), root_path, class: 'btn btn-info' %></div>
