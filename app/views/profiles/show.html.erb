<div>

  <%= image_tag @user.facebook_picture_url%>
  <h1> <%= @user.first_name %></h1>


  <h2><%= t('.title') %></h2>


  <h3><%= t('.host_summary', count: @user.hangouts.future_hangout(Time.zone.now).valid.size) %></h3>

  <ul>
    <%@user.hangouts.future_hangout(Time.zone.now).valid.each do |hangout|%>
      <li>
        <%= t('.host_list_html', day: hangout.date.strftime('%d %b, %Y'), hour: hangout.date.strftime('%I:%M%P'), link: link_to(hangout.title, hangout_path(hangout)), confirmation_count: hangout.confirmations.count ) %>
        <%= link_to edit_hangout_path(hangout), class: "btn btn-danger" do %>
          <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
        <% end %>
        <%= button_to cancel_hg_hangout_path(hangout),class:"btn btn-danger", method: :patch, data: { confirm: t('.alert_delete') } do %><i class="fa fa-trash-o" aria-hidden="true"></i><% end %>
      </li>
    <% end %>
  </ul>

  <h3><%= t('.guest_summary', count: @user.hangouts_as_guest.future_hangout(Time.zone.now).valid.size) %></h3>

  <ul>
    <%@user.hangouts_as_guest.future_hangout(Time.zone.now).valid.each do |hangout|%>
      <li>
      <%= t('.guest_list_html', day: hangout.date.strftime('%d %b, %Y'), hour: hangout.date.strftime('%I:%M%P'), link: link_to(hangout.title, hangout_path(hangout)), host: hangout.user.first_name ) %>
      <%= button_to hangout_confirmation_path( hangout, Confirmation.where( hangout: hangout, user: @user)), :method=> :delete, class:"btn", data: { confirm: t('.alert_delete') } do %><i class="fa fa-trash-o" aria-hidden="true"></i>
      <% end %>
      </li>
    <% end %>
  </ul>
</div>
