<div class="container" id="confirmation_page">
  <div class="row">
    <div class="col-xs 12">

        <%= simple_form_for([@hangout, @confirmation]) do |f| %>
          <div class="form-inline">
            <%= f.input :leaving_address, placeholder: t('.placeholder'), label: false %>
            <%= f.input :transportation, label: false %>
            <%= f.input :latitude, label: false %>
            <%= f.input :longitude, label: false %>
            <%= f.submit class: 'btn btn-default', value: t(".btn-text") %>
          </div>
        <% end %>

    </div>
  </div>


<div class="row">
    <div class="col-xs 12">
      <div id="map" style="width:100%;height:300px"></div>
      <ul class="list-inline btn-wrapper">
      <li><a href='#'><%= image_tag "driving.png", id: "driving", class: "active transport-btn"%></a></li>
      <li><a href='#'><%= image_tag "transit.png", id: "transit", class: "transport-btn"%></a></li>
      <li><a href='#'><%= image_tag "walking.png", id: "walking", class: "transport-btn"%></a></li>
      <li><a href='#'><%= image_tag "cycling.png", id: "cycling", class: "transport-btn"%></a></li>
      </ul>
    </div>
  </div>
</div>
